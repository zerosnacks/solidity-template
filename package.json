{
  "name": "solidity-template",
  "version": "0.1.0",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "hh:clean": "hardhat clean",
    "hh:build": "hardhat compile",
    "hh:test": "hardhat test",
    "lint:check": "prettier --check 'src/**/*.sol'",
    "lint:fix": "prettier --write 'src/**/*.sol'",
    "solhint:check": "solhint --config .solhint.json 'src/**/*.sol'",
    "solhint:fix": "solhint --config .solhint.json 'src/**/*.sol' --fix",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.6",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@types/joi": "^17.2.3",
    "@types/node": "^18.0.0",
    "dotenv": "^16.0.1",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "hardhat": "^2.9.9",
    "hardhat-contract-sizer": "^2.5.1",
    "hardhat-gas-reporter": "^1.0.8",
    "husky": "^8.0.1",
    "joi": "^17.6.0",
    "lint-staged": "^13.0.1",
    "prettier": "^2.6.2",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.21",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.4"
  },
  "lint-staged": {
    "*.sol": "prettier --write",
    "*.json": "prettier --write",
    "*.ts": "prettier --write",
    "*.js": "prettier --write"
  }
}
